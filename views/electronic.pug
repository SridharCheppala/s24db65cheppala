extends layout

block content
  h1= title
  - let destina = `dispatch(\"/ele/create\")`
  button.btn( class="btn-primary ml-1", onclick= destina) create
  - let items = results
    div(class="container-fluid")
      div(class="row m-1")
       each item in items
        - let destination = `dispatch(\"/ele/update?id=${item._id}\")`
        - let destinatio = `dispatch(\"/ele/delete?id=${item._id}\")`
        - let destinati = `dispatch(\"/ele/detail?id=${item._id}\")`
        div(class="row-sm-2", class="m-1") Item #{item.electronic_type}(#{item.ratting}) is #{item.cost}
        button.btn( class="btn-primary ml-1", onclick= destination) Update
        button.btn( class="btn-primary ml-1", onclick= destinatio) delete
        button.btn( class="btn-primary ml-1", onclick= destinati) detail
    script.
      function dispatch(path){
        window.location.href=path
     }